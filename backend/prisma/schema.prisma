generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  NEW
  IN_PROGRESS
  DONE
  TRASH
  REJECTED
}

model User {
  id            Int      @id @default(autoincrement())
  fullname      String?
  email         String?  @unique
  phone_number  String?  @unique
  password      String
  gender        String?
  isVerified    Boolean  @default(false)
  age           Int?
  city          String?
  balance       Int      @default(0)
  referral_link String?  @unique
  created_at    DateTime @default(now())
  Links         Link[]
  Orders        Orders[]
  profile       Profile?
}

model Profile {
  id      Int      @id @default(autoincrement())
  user    User     @relation(fields: [user_id], references: [id])
  user_id Int      @unique
  info    Json     @default("{}")
  images  String[]
}

model Link {
  id         Int      @id @default(autoincrement())
  title      String   @default("Untitled")
  product_id Int
  user_id    Int
  url_link   String
  created_at DateTime @default(now())
  User       User     @relation(fields: [user_id], references: [id])
  Orders     Orders[]
}

model SuperCategory {
  id    Int    @id @default(autoincrement())
  title String
}

model Category {
  id                Int    @id @default(autoincrement())
  title             String
  super_category_id Int    @default(1)
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String   @default("")
  compound    String   @default("")
  category_id Int      @default(1)
  action      String   @default("")
  price       Int      @default(0)
  description String   @default("")
  count       Int      @default(0)
  testimony   String   @default("")
  contraction String   @default("")
  image       Json     @default("{}")
  color       Int      @default(1)
  extra       Json     @default("{}")
  Orders      Orders[]
}

model Orders {
  id         Int         @id @default(autoincrement())
  name       String
  surname    String
  phone      String
  city       String
  product_id Int
  Product    Product     @relation(fields: [product_id], references: [id])
  count      Int
  status     OrderStatus @default(NEW)
  link_id    Int?
  Link       Link?       @relation(fields: [link_id], references: [id])
  user_id    Int?
  User       User?       @relation(fields: [user_id], references: [id])
  created_at DateTime    @default(now())
}

model PhoneCode {
  id         Int      @id @default(autoincrement())
  phone      String   @unique
  code       Int
  created_at DateTime @default(now())
}

model Bid {
  id         Int      @id @default(autoincrement())
  name       String
  surname    String
  phone      String
  message    String
  created_at DateTime @default(now())
}

model SmsToken {
  id         Int      @id @default(autoincrement())
  token      String
  created_at DateTime @default(now())
}

model Guide {
  id          Int      @id @default(autoincrement())
  title       String
  subtitle    String
  description String
  created_at  DateTime @default(now())
}

model Rate {
  id   Int @id @default(autoincrement())
  rate Int
}
