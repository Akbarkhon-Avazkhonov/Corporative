generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  fullname      String?
  email         String?  @unique
  phone_number  String?  @unique
  password      String
  gender        String?
  age           Int?
  city          String?
  balance       Int      @default(0)
  referral_link String?  @unique
  created_at    DateTime @default(now())
  links         Link[]
}

model Link {
  id          Int      @id @default(autoincrement())
  title       String   @default("Untitled")
  product_id  Int
  user_id     Int
  url_link    String
  created_at  DateTime @default(now())
  User        User     @relation(fields: [user_id], references: [id])
}

model SuperCategory {
  id    Int    @id @default(autoincrement())
  title String
}

model Category {
  id                Int    @id @default(autoincrement())
  title             String
  super_category_id Int    @default(1)
}

model Product {
  id          Int    @id @default(autoincrement())
  title       String @default("")
  compound    String @default("")
  category_id Int    @default(1)
  action      String @default("")
  price       Int    @default(0)
  description String @default("")
  count       Int    @default(0)
  testimony   String @default("")
  contraction String @default("")
  image       Json   @default("{}")
  color       Int    @default(1)
  extra       Json   @default("{}")
}

model Orders {
  id          Int      @id @default(autoincrement())
  name        String
  surname     String
  phone       String
  city        String
  product_id  Int
  count       Int 
  status      String  @default("NEW")
  referral_id Int    @default(0) // user of user who created referral link
  link_id     Int   @default(0)
  created_at  DateTime @default(now())
}

model PhoneCode {
  id          Int      @id @default(autoincrement())
  phone       String   @unique
  code        Int
  created_at  DateTime @default(now())
}

model SmsToken {
  id          Int      @id @default(autoincrement())
  token       String
  created_at  DateTime @default(now())
}

model Guide {
  id          Int      @id @default(autoincrement())
  title       String
  subtitle    String
  description String
  created_at  DateTime @default(now())
}